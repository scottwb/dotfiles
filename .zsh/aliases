alias ls=ls

# Directory Shortcuts
alias ranger="cd ~/src/ranger_site && pwd"
alias potw="cd ~/src/potw-site && pwd"

# Rails 3
alias rc="rails console"
alias rs="rails server"
alias rg="rails generate"
alias rr="rails runner"
alias migrate="rake db:migrate db:test:clone"
alias uni="RAILS_ENV=development unicorn -c config/unicorn.rb"
alias uniprod="RAILS_ENV=production unicorn -c config/unicorn.rb"
alias mrp="mysql -u root ranger_production"
alias mpd="mysql -u root potw_dev"
alias log="tail -f log/*.log"

# Git
alias gb="git branch"
alias gbc="git branch-create"
alias gbd="git branch-delete"
alias gs="git status -s"
alias gss="git stash save"
alias gsl="git stash list"
alias gsa="git stash apply"
alias gsp="git stash pop"
alias gd="git diff"
alias gco="git checkout"
alias gci="git commit -a"
alias gm="git merge --no-ff"
alias gmnc="git merge --no-ff --no-commit"
alias gpl="git pull --log"
alias cdr="cd ./\$(git rev-parse --show-cdup)"

# Misc Utilities
alias potwget="wget --load-cookies cookies.txt --save-cookies cookies.txt --keep-session-cookies --header 'User-Agent: POTW 1.0' --server-response -O -"
alias tcpdump-rails="tcpdump -c 20 -s 0 -i lo0 -A tcp port 3000"
